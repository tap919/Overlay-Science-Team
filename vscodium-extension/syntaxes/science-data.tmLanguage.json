{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Science Data Format",
  "patterns": [
    {
      "include": "#scientific-types"
    },
    {
      "include": "#units"
    },
    {
      "include": "#chemicals"
    },
    {
      "include": "#genes"
    },
    {
      "include": "#proteins"
    }
  ],
  "repository": {
    "scientific-types": {
      "patterns": [
        {
          "name": "constant.numeric.scientific",
          "match": "\\b[0-9]+\\.?[0-9]*[eE][+-]?[0-9]+\\b"
        },
        {
          "name": "constant.numeric.percentage",
          "match": "\\b[0-9]+\\.?[0-9]*%\\b"
        }
      ]
    },
    "units": {
      "patterns": [
        {
          "name": "keyword.other.unit.science",
          "match": "\\b(nm|um|mm|cm|m|km|mg|g|kg|ml|L|mol|M|mM|uM|nM|pM|Da|kDa|bp|kb|Mb|Gb|Â°C|K|atm|bar|Pa|kPa|MPa|J|kJ|cal|kcal|eV|V|mV|Hz|kHz|MHz|GHz)\\b"
        }
      ]
    },
    "chemicals": {
      "patterns": [
        {
          "name": "entity.name.type.chemical",
          "match": "\\b([A-Z][a-z]?[0-9]*)+\\b"
        },
        {
          "name": "string.quoted.smiles",
          "begin": "SMILES:",
          "end": "$",
          "patterns": [
            {
              "name": "constant.character.smiles",
              "match": "[A-Za-z0-9\\(\\)\\[\\]=#@+\\-]+"
            }
          ]
        }
      ]
    },
    "genes": {
      "patterns": [
        {
          "name": "entity.name.gene",
          "match": "\\b[A-Z][A-Z0-9]{2,}\\b"
        },
        {
          "name": "constant.other.ensembl-id",
          "match": "ENS[GT][0-9]{11}"
        },
        {
          "name": "constant.other.uniprot-id",
          "match": "[OPQ][0-9][A-Z0-9]{3}[0-9]|[A-NR-Z][0-9]([A-Z][A-Z0-9]{2}[0-9]){1,2}"
        }
      ]
    },
    "proteins": {
      "patterns": [
        {
          "name": "entity.name.protein",
          "match": "\\b[A-Z][a-z]+([A-Z][a-z]+)*\\b"
        },
        {
          "name": "constant.other.pdb-id",
          "match": "\\b[0-9][A-Za-z0-9]{3}\\b"
        }
      ]
    }
  },
  "scopeName": "source.science-data"
}
